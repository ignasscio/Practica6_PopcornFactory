            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"
            />

        <RadioButton
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:text="10"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />


    </RadioGroup>

    <RadioGroup android:id="@+id/radioGroup_row3"
        android:layout_marginTop="@dimen/marginTop_radiusGroup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/horizontal_padding_radiousGroup"
        >

        <RadioButton
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:text="11"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            />

        <RadioButton
            android:layout_marginHorizontal="5dp"
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:text="12"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"

            />

        <RadioButton
            android:layout_marginHorizontal="5dp"
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:text="13"
            android:textColor="@color/black"
            android:textAlignment="center"
