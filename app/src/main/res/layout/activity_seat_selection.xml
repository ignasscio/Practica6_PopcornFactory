            android:text="17"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"

            />

        <RadioButton
            android:layout_marginHorizontal="5dp"
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:text="18"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"
            />

        <RadioButton
            android:layout_marginHorizontal="5dp"
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:text="19"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"
            />

        <RadioButton
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:text="20"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selectable"
            android:textSize="@dimen/radioButtonTextSize"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />


    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/baby_gray"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:text="Screen"
        android:textSize="23sp"
        android:textStyle="italic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/horizontal_padding_radiousGroup"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:background="@drawable/radio_normal"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/horizontal_padding_radiousGroup"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:background="@drawable/radio_disabled"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not\nAvailable"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/horizontal_padding_radiousGroup"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/radio_size"
            android:layout_height="@dimen/radio_size"
            android:background="@drawable/radio_selected"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your\nSelection"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>
    
    <Button android:id="@+id/button_confirm"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:textColor="@color/black"
        android:text="Confirm"
        android:paddingHorizontal="50dp"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>